<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="#BAF8A1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title :"
            android:id="@+id/tempttitle"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Temp Title"
            android:layout_toRightOf="@+id/tempttitle"
            android:id="@+id/restxttitle"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject :"
            android:layout_below="@+id/tempttitle"
            android:id="@+id/tempsubject"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Temp Subject"
            android:layout_toRightOf="@+id/tempsubject"
            android:layout_below="@+id/tempttitle"
            android:id="@+id/restxtsubject"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="17sp"
            android:layout_toEndOf="@+id/tempsubject" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp Semester"
            android:layout_below="@+id/restxtsubject"
            android:layout_toRightOf="@+id/txts"
            android:id="@+id/restxtsem"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester :"
            android:layout_below="@+id/restxtsubject"
            android:id="@+id/txts"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/tempdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txts"
            android:text="Description: "
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="italic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/tempdesc"
            android:id="@+id/restxtdesc"
            android:text="Description"
            android:textColor="#000"
            android:textStyle="italic"
            />
    </RelativeLayout> 
    

</android.support.v7.widget.CardView>